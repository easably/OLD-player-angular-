{
  "productName": "Step-by-step-movie",
  "directories": {
    "output": "release/"
  },
  "asar": true,
  "asarUnpack": [],
  "files": [
        "**/*",
        "!**/*.ts",
        "!*.code-workspace",
        "!LICENSE.md",
        "!package.json",
        "!package-lock.json",
        "!src/",
        "!e2e/",
        "!hooks/",
        "!angular.json",
        "!_config.yml",
        "!karma.conf.js",
        "!tsconfig.json",
        "!tslint.json",
        "!mpv/"
    ],
  "win": {
    "icon": "dist/favicon.png",
    "target": [
      "portable"
    ],
    "extraFiles": ["mpv/win/"]
  },
  "mac": {
    "icon": "dist/favicon.png",
    "target": [
      "dmg"
    ],
    "extraFiles": ["mpv/mac/"]
  },
  "linux": {
    "icon": "dist",
    "target": [
      "AppImage"
    ]
  }
}
